<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM Test Suite">

    <parameter name="browser" value="chrome"/>

    <!-- Test groups for better organization -->
    <test name="Admin Tests - Chrome" preserve-order="true">
        <classes>
            <class name="com.automation.tests.LoginTest">
                <methods>
                    <include name="testSuccessfulLogin"/>
                    <exclude name="testInvalidUsername"/>
                    <exclude name="testInvalidPassword"/>
                    <exclude name="testEmptyCredentials"/>
                    <exclude name="testFieldInteractions"/>

                </methods>
            </class>
            <class name="com.automation.tests.AdminTest">
                <methods>
                    <exclude name="testAddUser"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>